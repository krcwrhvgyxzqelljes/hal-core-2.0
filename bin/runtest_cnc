#!/usr/bin/bash

export LD_LIBRARY_PATH=../lib

cd .. && cd scripts
./halclean 
cd ..
cd bin

./cnc &

./halcmd stop
./halcmd loadrt threads name1=base-thread fp1=0 period1=25000 name2=servo-thread period2=1000000
./halcmd loadrt state_machine
./halcmd addf the_function servo-thread
#./halcmd net cnc.motion_finished test.tool_on
./halcmd start



